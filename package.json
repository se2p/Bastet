{
  "name": "bastet-framework",
  "version": "0.0.1",
  "description": "Program Analysis Framework",
  "main": "main.js",
  "scripts": {
    "antlr4ts": "antlr4ts -visitor src/bastet/syntax/parser/grammar/Leila.g4",
    "start": "node dist/main.js $*",
    "build": "npm run build-no-lint && npm run lint",
    "build-no-lint": "npm run build-ts && npm run copy-static-assets",
    "serve": "npm start",
    "watch-node": "nodemon dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "npm run build && jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc --incremental",
    "upgrade-all-packages": "npm-check-updates -u",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:se2p/bastet.git"
  },
  "keywords": [
    "program analysis",
    "abstract interpretation",
    "model checking",
    "verification",
    "data flow",
    "testing"
  ],
  "author": "University of Passau, and the contributors",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^26.0.12",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "antlr4ts-cli": "^0.5.0-alpha.3",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-sinon": "^4.0.0",
    "eslint-plugin-ie11": "^1.0.0",
    "eslint-plugin-jsdoc": "^30.3.0",
    "eslint-plugin-local-rules": "^0.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.161",
    "acorn": "^8.0.1",
    "antlr4ts": "^0.5.0-alpha.3",
    "colormap": "^2.3.1",
    "commander": "^6.1.0",
    "core-util-is": "^1.0.2",
    "heap-js": "^2.1.1",
    "image-size": "^0.8.3",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.20",
    "mkdirp": "^1.0.4",
    "toposort": "^2.0.2",
    "typescript-logging": "^1.0.0",
    "wasm-ts": "^0.1.3"
  }
}
